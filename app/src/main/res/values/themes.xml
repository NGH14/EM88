<resources>
	<!--<editor-fold desc="">-->
	<!--</editor-fold>-->

	<!-- global - - - - - - - - - - - - - - - - - - - - - -->
	<style name="ExpenseMoney88" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
		<item name="appBackground">@color/bg_light</item>
		<item name="background">@color/bg_light</item>
		<item name="android:textColor">@color/black</item>

		<!-- Primary brand color. -->
		<item name="colorPrimary">@color/purple_500</item>
		<item name="colorPrimaryVariant">@color/purple_700</item>
		<item name="colorOnPrimary">@color/bg_light</item>
		<!-- Secondary brand color. -->
		<item name="colorSecondary">@color/teal_200</item>
		<item name="colorSecondaryVariant">@color/teal_700</item>
		<item name="colorOnSecondary">@color/black</item>
		<!-- Status bar color. -->
		<item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
		<item name="labelVisibilityMode">unlabeled</item>

		<item name="itemBackground">@android:color/transparent</item>

		<!-- view style -->
		<item name="appViewButtonStyle">@style/ExpenseMoney88.Button</item>
		<item name="appViewIconButtonStyle">@style/ExpenseMoney88.IconButton</item>
	</style>

	<!-- buttons - - - - - - - - - - - - - - - - - - - - - -->
	<style name="ExpenseMoney88.Button" parent="Widget.MaterialComponents.Button">
		<item name="shapeAppearanceOverlay">@style/ExpenseMoney88.Shape.Rounded</item>
		<item name="backgroundTint">@color/white</item>
		<item name="iconTint">@color/black</item>
		<item name="android:textColor">@color/black</item>
	</style>
	<!-- icon button -->
	<style name="ExpenseMoney88.IconButton" parent="Widget.App.Button.OutlinedButton.IconOnly">
		<item name="backgroundTint">@color/white</item>
		<item name="iconTint">@color/black</item>
		<item name="android:textColor">@color/black</item>
		<item name="android:elevation">10dp</item>
		<item name="iconGravity">textStart</item>
	</style>

	<!-- input - - - - - - - - - - - - - - - - - - - - - -->
	<style name="ExpenseMoney88.Input" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
		<item name="backgroundTint">@color/bg_light</item>
		<item name="boxCornerRadiusBottomEnd">@dimen/radius</item>
		<item name="boxCornerRadiusBottomStart">@dimen/radius</item>
		<item name="boxCornerRadiusTopEnd">@dimen/radius</item>
		<item name="boxCornerRadiusTopStart">@dimen/radius</item>
	</style>

	<!-- shapes - - - - - - - - - - - - - - - - - - - - - -->
	<style name="ExpenseMoney88.Shape" parent="" />

	<style name="ExpenseMoney88.Shape.Rounded" parent="ExpenseMoney88.Shape">
		<item name="cornerSize">@dimen/radius_button</item>
		<item name="android:shadowColor">@color/red</item>
	</style>

	<style name="ExpenseMoney88.Button.CenterAction" parent="Widget.Design.FloatingActionButton">
		<item name="backgroundTint">@color/bg_light</item>
		<item name="android:foreground">?selectableItemBackgroundBorderless</item>
		<item name="android:clickable">true</item>
	</style>
</resources>
